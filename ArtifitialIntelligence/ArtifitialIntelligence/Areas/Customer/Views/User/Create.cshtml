@using ArtifitialIntelligence.Models;
@model ApplicationUser
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info" style="text-align:center">Registration Form</h2>

<style>
    .form-center
    {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;

     
    }
   


  </style>


  <div class="form-center">
<form asp-action="Create" method="post"  id="user-form" enctype="multipart/form-data">
    <div class="p-2 rounded border">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <h4>@ViewBag.message</h4>
        <div class="form-group row">
            <div class="col-4">
                  <label asp-for="UserName" placeholder="as Email" ></label>
            </div>
            <div class="col-8">
                <input asp-for="UserName"  placeholder="as Email"  class="form-control" />

            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-8">
                <input asp-for="FirstName"  class="form-control" />

            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

         <div class="form-group row">
            <div class="col-4">
                <label asp-for="MiddleName"></label>
            </div>
            <div class="col-8">
                <input asp-for="MiddleName" placeholder="optional field" class="form-control" />

            </div>
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-8">
                <input asp-for="LastName"  class="form-control" />

            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Email"></label>
            </div>
            <div class="col-8">
                <input asp-for="Email"  class="form-control" type="email" />

            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="PasswordHash"></label>
            </div>
            <div class="col-8">
                <input asp-for="PasswordHash"  class="form-control" type="password" />


            </div>
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-8">
                <input asp-for="PhoneNumber"  placeholder="Mobile Number" class="form-control" type="number" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit"   class="btn btn-primary"  value="Sign Up"/>
           @* <a asp-action="Index" class="btn btn-success">Back to List</a>*@

        </div>
    </div>
</form>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
        }
    <script type="text/javascript">

        $(function () {
            var add = '@TempData["Save"]'
            if (add != '') {
                alertify.success(add);

            }
        })
    </script>

    <script>
$(document).ready(function(){
$("#user-form").validate({
 rules:{
UserName:{
    required:true,
 
},
FirstName: {
    required: true,

},
LastName: {
    required: true,

},
Email: {
    required: true,

},
PasswordHash: {
    required: true,

},
PhoneNumber: {
    required: true,

}

 },
    messages:
    {
        UserName:"Enter your User Name",
        FirstName:"Enter your First Name",
        Lastname:"Enter your Last Name",
        Email:"Please Enter your Email",
        PasswordHash:"Please Enter Valid Password",
        PhoneNumber:"Enter your Phone Number"
    }
   });
});
    </script>
    
    }



