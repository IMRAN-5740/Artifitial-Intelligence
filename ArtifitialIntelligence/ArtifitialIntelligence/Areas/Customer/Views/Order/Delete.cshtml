@model ArtifitialIntelligence.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">User Registration Delete Form</h2>

<form asp-action="Delete" method="post" id="user-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <h4>@ViewBag.message</h4>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="OrderNo"></label>
            </div>
            <div class="col-5">
                <input asp-for="OrderNo" class="form-control" readonly="readonly" />

            </div>
            <span asp-validation-for="OrderNo" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" readonly="readonly" class="form-control" />

            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhoneNo"></label>
            </div>
            <div class="col-5">
                <input asp-for="PhoneNo" readonly="readonly" class="form-control" />

            </div>
            <span asp-validation-for="PhoneNo" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email" readonly="readonly" class="form-control" />

            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Address"></label>
            </div>
            <div class="col-5">
                <input asp-for="Address" readonly="readonly" class="form-control" readonly="readonly" />

            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="OrderDate"></label>
            </div>
            <div class="col-5">
                <input asp-for="OrderDate" readonly="readonly" class="form-control"  />
            </div>
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
      
        <div class="col-5">
            <h4 style="color:red">Do you Want to Delete this user Permenantly</h4>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete this Order" />
            <a asp-action="Index" class="btn btn-success"><i class="fa-solid fa-arrow-right-to-bracket"></i>&nbsp; Back to Order List</a>
        </div>
    </div>
</form>

