@using ArtifitialIntelligence.Models
@model Company
@{
    ViewData["Title"] = "Create";
}

<br />
<br />
<h3 class="text-info">Create New Company</h3>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="form-group-row">
                <div class="col-2">
                    <label asp-for="CompanyName"></label>
                </div>
                <div class="col-5">
                    <input  asp-for="CompanyName" class="form-control" />
                </div>
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>

        <div class="form-group-row">
            <div class="col-2">
                <label asp-for="Summary"></label>
            </div>
            <div class="col-5">
                <input asp-for="Summary" class="form-control" />
            </div>
            <span asp-validation-for="Summary" class="text-danger"></span>
        </div>

        <div class="form-group-row">
            <div class="col-2">
                <label asp-for="ImageFileName"></label>
            </div>
            <div class="col-5">
                <input asp-for="ImageFileName" class="form-control" type="file" />
            </div>
            <span asp-validation-for="ImageFileName" class="text-danger"></span>
        </div>

        <div class="form-group-row">
            <div class="col-2">
                <label asp-for="AnchorLink"></label>
            </div>
            <div class="col-5">
                <input asp-for="AnchorLink" class="form-control" />
            </div>
            <span asp-validation-for="AnchorLink" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input  type="submit" class="btn btn-success" value="Submit Data"/>
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



