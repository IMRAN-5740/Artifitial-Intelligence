@using ArtifitialIntelligence.Models;
@model Company
@{
    ViewData["Title"] = "Delete";
}
<br />

<style>
    .col-3 img {
        border-radius: 5px;
        border: solid;
        border-color: aqua;
    }
</style>
<h2 class="text-info">Company Delete</h2>
<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CompanyName"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="CompanyName" readonly="readonly" class="form-control" />

                </div>
             
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Summary"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Summary" readonly="readonly" class="form-control" rows="4"></textarea>

                </div>
               
            </div>

         @*   <div class="form-group row">
                <div class="col-4">
                    <label asp-for="AnchorLink"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ImageFileName" readonly="readonly" name="image"   class="form-control" />

                </div>
               
            </div>*@

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Like"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Like" readonly="readonly" class="form-control" />

                </div>
                
            </div>

            <div class="form-group">
                <h5 class="text-danger">Do you Want to Delete this Comapny?</h5>
                <input type="submit" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" value="Delete"/>
                <a asp-action="Index" class="btn btn-success"> <i class="fa-solid fa-arrow-right-to-bracket"></i>&nbsp;Back to List</a>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <label style="color:orangered ; font-size:30px" asp-for="ImageFileName"></label>
            <img src="~/@Model.ImageFileName" width="100%" />
        </div>


    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
    }


