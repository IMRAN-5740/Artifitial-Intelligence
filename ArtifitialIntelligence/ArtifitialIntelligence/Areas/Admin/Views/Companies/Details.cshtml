@using ArtifitialIntelligence.Models
@model Company
@{
    ViewData["Title"] = "Details";
}

<br />
<br />
<h3 class="text-info">Details Company</h3>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



        <div class="form-group-row">
            <div class="col-2">
                <label asp-for="CompanyName"></label>
            </div>
            <div class="col-5">
                <input asp-for="CompanyName"  readonly="readonly" class="form-control" />
            </div>
          @*  <span asp-validation-for="CompanyName" class="text-danger"></span>*@
        </div>

        <div class="form-group-row">
            <div class="col-2">
                <label asp-for="Summary"></label>
            </div>
            <div class="col-5">
                <input asp-for="Summary" readonly="readonly" class="form-control" />
            </div>
        @*    <span asp-validation-for="Summary" class="text-danger"></span>*@
        </div>

        <div class="form-group-row">
            <div class="col-2">
                <label asp-for="ImageFileName"></label>
            </div>
            <div class="col-5">
                <input asp-for="ImageFileName" readonly="readonly" class="form-control" type="file" />
            </div>
@*            <span asp-validation-for="ImageFileName" class="text-danger"></span>*@
        </div>

        <div class="form-group-row">
            <div class="col-2">
                <label asp-for="AnchorLink"></label>
            </div>
            <div class="col-5">
                <input asp-for="AnchorLink" readonly="readonly" class="form-control" />
            </div>
          @*  <span asp-validation-for="AnchorLink" class="text-danger"></span>*@
        </div>

        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit data</a>
           
            <a asp-action="Index" class="btn btn-info">Back to List</a>
           @* <input type="submit" class="btn btn-success" value="Update Data" />*@
        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }



