@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <div  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-solid fa-right-from-bracket fa-xs" style="color: #061c41;"></i>Hello @User.Identity.Name!</div>

            <a class="nav-link text-dark btn btn-outline-info" asp-area="Customer" asp-controller="User" asp-action="Index"><i class="fa-solid fa-address-card" style="color:saddlebrown"></i> Dashboard</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-outline-danger text-dark"><i class="fa-solid fa-right-from-bracket fa-xs" style="color: #061c41;"></i>Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark btn btn-outline-success" asp-area="Customer" asp-controller="User" asp-action="Create"><i class="fa-sharp fa-solid fa-user-plus fa-shake" style='color:blueviolet'></i> Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark btn btn-outline-success" asp-area="Identity" asp-page="/Account/Login"><i class="fa-sharp fa-solid fa-right-to-bracket fa-shake " style='color:green'></i> Login</a>
    </li>
}
</ul>
